    <!--</kurtome.etch.app.layout.ConstrainedCanvasLayout>-->


        <ImageButton
                android:id="@+id/color_chooser_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_alignParentBottom="true"
                android:alpha="1"
                android:contentDescription="color chooser"
                android:src="@drawable/color_palette"/>


    <ImageButton
            android:id="@+id/brush_stroke_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/color_chooser_button"
            android:layout_alignParentBottom="true"
            android:alpha="1"
            android:contentDescription="brush stroke picker"
            android:src="@android:drawable/ic_menu_edit"/>


    <ImageButton
            android:id="@+id/save_etch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:alpha="1"
            android:contentDescription="save"
            android:src="@android:drawable/ic_menu_save"/>



    <kurtome.etch.app.drawing.DrawingView
            android:id="@+id/drawing"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:alpha="1"
            android:layout_below="@id/location_txt"
            android:layout_above="@id/color_chooser_button"
            android:background="#FFFFFFFF"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/overlay_background"
                    android:id="@+id/drawing_loader_overlay" >

        <ProgressBar android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:id="@+id/drawing_loader_progress"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@android:drawable/ic_dialog_alert"
                   android:layout_centerInParent="true"
                   android:contentDescription="error occurred"
                   android:id="@+id/drawing_loader_alert_img" />

    </RelativeLayout>

</RelativeLayout>