<?xml version="1.0" encoding="utf-8"?>

<kurtome.etch.app.drawing.BrushStrokeView
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:columnCount="2"
              android:layout_height="match_parent" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stroke_width_label_txt"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/brush_radius"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/stroke_width_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignBaseline="@id/stroke_width_label_txt"
        android:layout_alignParentRight="true"
        android:text="5px"
        android:padding="5dp"
        android:textStyle="normal" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/stroke_width_seek"
            android:layout_height="wrap_content"
            android:layout_below="@id/stroke_width_label_txt"
            android:layout_width="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="10dp"
    />


    <TextView android:layout_marginTop="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:text="@string/brush_mode"
              android:layout_below="@id/stroke_width_seek"
              android:textStyle="bold"
              android:padding="5dp"
              android:layout_margin="10dp"
              android:id="@+id/stroke_mode_label_txt" />

    <Spinner android:id="@+id/brush_mode_spinner"
             android:layout_toRightOf="@id/stroke_mode_label_txt"
             android:layout_below="@id/stroke_width_seek"
             android:layout_alignBaseline="@id/stroke_mode_label_txt"
             android:layout_height="wrap_content"
             android:padding="5dp"
             android:layout_margin="10dp"
             android:layout_width="fill_parent"/>

