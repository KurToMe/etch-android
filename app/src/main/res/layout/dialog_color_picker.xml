<kurtome.etch.app.colorpickerview.dialog.ColorPickerDialogView
        xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
        >

    <kurtome.etch.app.colorpickerview.view.ColorPickerView
            android:id="@+id/color_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
            >

        <kurtome.etch.app.colorpickerview.view.ColorPanelView
                android:id="@+id/color_panel_old"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:padding="@dimen/action_padding"
                />

        <kurtome.etch.app.colorpickerview.view.ColorPanelView
                android:id="@+id/color_panel_new"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="@dimen/action_padding"
                android:layout_weight="0.5"
                />
    </LinearLayout>
</kurtome.etch.app.colorpickerview.dialog.ColorPickerDialogView>